@model Syntra.MVCAdvanced.ViewModels.CourseDetailsVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="TeacherId"></label>
                <select asp-for="TeacherId"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListofTeachers,"Value", "Text"))">
                </select>
            </div>
            <div class="form-group">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="LocationId"></label>
                <select asp-for="LocationId"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListofLocations,"Value", "Text"))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
